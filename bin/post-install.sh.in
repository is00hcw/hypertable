# set "current" link
if [ -h /opt/hypertable/current ]; then
  rm -f /opt/hypertable/current
  ln -s /opt/hypertable/@VERSION@ /opt/hypertable/current
fi

if [ -d /tmp/hypertable-install ]; then

  # fixup symlinks
  if [ -e /tmp/hypertable-install/post.sh ]; then
    /tmp/hypertable-install/post.sh
  fi
  
  # config files
  if ls /tmp/hypertable-install/*.cfg > /dev/null 2>&1; then
    cp /tmp/hypertable-install/*.cfg /opt/hypertable/@VERSION@/conf
  fi
  
  # notification script
  if [ -e /tmp/hypertable-install/notification-hook.sh ]; then
    cp /tmp/hypertable-install/notification-hook.sh /opt/hypertable/@VERSION@/conf
  fi

fi  